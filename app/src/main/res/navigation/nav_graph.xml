<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <!-- Auth Flow -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.travelmeet.app.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.travelmeet.app.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_registerFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Main Flow -->
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.travelmeet.app.ui.feed.FeedFragment"
        android:label="Feed"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_feedFragment_to_spotDetailFragment"
            app:destination="@id/spotDetailFragment" />

        <action
            android:id="@+id/action_feedFragment_to_addSpotFragment"
            app:destination="@id/addSpotFragment" />
    </fragment>

    <fragment
        android:id="@+id/addSpotFragment"
        android:name="com.travelmeet.app.ui.addspot.AddSpotFragment"
        android:label="Add Spot"
        tools:layout="@layout/fragment_add_spot" />

    <fragment
        android:id="@+id/spotDetailFragment"
        android:name="com.travelmeet.app.ui.detail.SpotDetailFragment"
        android:label="Spot Detail"
        tools:layout="@layout/fragment_spot_detail">

        <argument
            android:name="spotId"
            app:argType="string" />

        <action
            android:id="@+id/action_spotDetailFragment_to_addSpotFragment"
            app:destination="@id/addSpotFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.travelmeet.app.ui.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_mapFragment_to_spotDetailFragment"
            app:destination="@id/spotDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.travelmeet.app.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_profileFragment_to_spotDetailFragment"
            app:destination="@id/spotDetailFragment" />
        
        <action
            android:id="@+id/action_profileFragment_to_mySpotsFragment"
            app:destination="@id/mySpotsFragment" />
    </fragment>

    <fragment
        android:id="@+id/mySpotsFragment"
        android:name="com.travelmeet.app.ui.profile.MySpotsFragment"
        android:label="My Spots"
        tools:layout="@layout/fragment_my_spots">
        <action
            android:id="@+id/action_mySpotsFragment_to_spotDetailFragment"
            app:destination="@id/spotDetailFragment" />
    </fragment>

</navigation>
